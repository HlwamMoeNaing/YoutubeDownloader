<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8adp"
    android:background="@color/mainBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.cardview.widget.CardView
       android:id="@+id/card"
       android:layout_width="@dimen/_140adp"
       android:layout_height="@dimen/_120adp"
       app:cardCornerRadius="@dimen/_12adp"
       android:elevation="@dimen/_8adp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/cons">
          <androidx.appcompat.widget.AppCompatImageView
              android:id="@+id/detail_image_item"
              android:layout_width="match_parent"
              android:scaleType="centerCrop"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_height="match_parent" />


          <androidx.appcompat.widget.AppCompatImageView
              android:id="@+id/img_add_fav"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/favourite_full"
              app:layout_constraintEnd_toEndOf="@id/detail_image_item"
              app:layout_constraintTop_toTopOf="@+id/detail_image_item"
              android:layout_marginEnd="@dimen/_10adp"/>

      </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>